/* pages/seting/seting.wxss */
.seting{
  width:90%;
  margin: 0 auto;
}
/* 标题 */
.seting-title{
  font-size: 16px;
  color: #45A9E7;
  height: 50px;
  line-height: 50px;
}
/* 子标题 */
.seting-subtitle{
  font-size: 14px;
  color: #45A9E7;
  height: 20px;
  line-height: 20px;
}
/* 文字 */
.seting-textup{
  font-size: 14px;
  color: #333;
  display: block;
  height: 10px;
  line-height: 10px;
}

.seting-box{
  display: block;
  padding: 20px 0;
}
.seting-bottom{
  font-size: 12px;
  color: #B5B5B5;
  position: relative;
  border-bottom: 25px;
}
/* 向右箭头 */
.seting-lt{
  width: 20px;
  height: 20px;
  padding-top: 20px;
}
.seting-t{
  width: 18px;
  height: 18px;
  position: relative;
  top: 15px;
}
.wx-switch-input{
  width:82rpx !important;
  height:40rpx !important;
  position: relative;
  top: 20px;
  color: #40A7E7;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 40rpx !important;
height: 36rpx !important;
}