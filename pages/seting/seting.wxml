<view class='seting'>
  <!-- 自定义 -->
  <view class="seting-title">自定义</view>
  <view class='flex'>
    <view class='seting-box'>
      <text class='seting-textup'>自定义首页背景</text>
      <text class='seting-bottom'>长按恢复默认背景</text>
    </view>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>
  <view class='flex'>
    <text class='seting-box seting-textup'>打开顶部城市天气快捷搜索</text>
    <switch color='#40A7E7' checked bindchange=""/>
  </view>
  <view class='flex'>
    <text class='seting-box seting-textup'>显示生活指数信息</text>
    <switch color='#40A7E7' checked bindchange=""/>
  </view>
  <!-- 检查更新 -->
  <view class="seting-title">检查更新</view>
  <view class='flex'>
    <view class='seting-box'>
      <text  class='seting-textup'>打开首页更新提示</text>
      <view class='flex'>
        <image class='seting-t' src='../../img/t.png'></image>
        <text class='seting-bottom'>
         在首页检测到新版本、会提示更新
        </text>
      </view>
      
    </view>
    <view>
      <switch color='#40A7E7' checked="{{false}}" bindchange=""/>
    </view>
  </view>

  <!-- 小工具 -->
  <view class="seting-title">小工具</view>

  <!-- 小工具-NFC -->
  <view class="seting-subtitle">NFC</view>
  <view class='flex'>
    <text class='seting-box seting-textup'>检测是否支持NFC</text>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>

  <!-- 小工具-屏幕亮度 -->
  <view class="seting-subtitle">屏幕亮度</view>
  <view class='flex'>
    <view class='seting-box'>
      <text  class='seting-textup'>当前屏幕亮度</text>
      <text class='seting-bottom'>范围0~100,0最暗，100最亮</text>
    </view>
    <view>
      52
    </view>
  </view>
  <view>
    <text class='seting-box seting-textup'>设置屏幕宽度</text>
    <slider class='seting-box' activeColor="#40A7E7" value='52' bindchange="" step="2" show-value="{{true}}"/>
  </view>
  <view class='flex'>
    <view class='seting-box'>
      <text  class='seting-textup'>保持常量</text>
      <text class='seting-bottom'>仅在当前小程序、当次生效，离开小程序后设置失效</text>
    </view>
    <switch color='#40A7E7' bindchange=""/>
  </view>
 
  <!--小工具- 系统信息 -->
  <view class="seting-subtitle">系统信息</view>
  <view class='flex'>
    <text class='seting-box seting-textup'>查看系统信息</text>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>
  
  <!-- 清除数据 -->
  <view class="seting-title">清除数据</view>
  <view class='flex'>
    <view class='seting-box'>
      <text class='seting-textup'>首页悬浮球复位</text>
      <text class='seting-bottom'>首页悬浮球将复位到右下角</text>
    </view>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>
  <view class='flex'>
    <view class='seting-box'>
      <text class='seting-textup'>恢复初始化设置</text>
      <view class='flex'>
        <image class='seting-t' src='../../img/t.png'></image>
        <text class='seting-bottom'>
          所有设置信息都将被清除
        </text>
      </view>
      
    </view>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>
  <view class='flex' bindtap='remove'>
    <view class='seting-box'>
      <text class='seting-textup'>清除所有本地数据</text>
      <view class='flex'>
        <image class='seting-t' src='../../img/t.png'></image>
        <text class='seting-bottom'>
          所有本地数据都将被清除</text>
      </view>
    </view>
    <image class='seting-lt' src='../../img/lt.png'></image>
  </view>
</view>
